<?xml version="1.0" encoding="UTF-8"?>
<project name="job_app_speed" default="all">
  
  
  <property file="speedy-knowledge-sort.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.zip"/>
    <include name="*.apk"/>
    <include name="*.war"/>
    <include name="*.egg"/>
    <include name="*.ear"/>
    <include name="*.ane"/>
    <include name="*.swc"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.7" value="${jdk.home.1.7}/bin"/>
  <path id="jdk.classpath.1.7">
    <fileset dir="${jdk.home.1.7}">
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/jfxrt.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.7}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.7}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.7"/>
  
  <!-- Modules -->
  
  
  <!-- Module speedy-knowledge-sort -->
  
  <dirname property="module.speedy-knowledge-sort.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.speedy-knowledge-sort" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.speedy-knowledge-sort" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.speedy-knowledge-sort" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.speedy-knowledge-sort" value="${compiler.args}"/>
  
  <property name="speedy-knowledge-sort.output.dir" value="${module.speedy-knowledge-sort.basedir}/out/production/speedy-knowledge-sort"/>
  <property name="speedy-knowledge-sort.testoutput.dir" value="${module.speedy-knowledge-sort.basedir}/out/test/speedy-knowledge-sort"/>
  
  <path id="speedy-knowledge-sort.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="speedy-knowledge-sort.module.production.classpath">
    <path refid="${module.jdk.classpath.speedy-knowledge-sort}"/>
  </path>
  
  <path id="speedy-knowledge-sort.runtime.production.module.classpath">
    <pathelement location="${speedy-knowledge-sort.output.dir}"/>
  </path>
  
  <path id="speedy-knowledge-sort.module.classpath">
    <path refid="${module.jdk.classpath.speedy-knowledge-sort}"/>
    <pathelement location="${speedy-knowledge-sort.output.dir}"/>
  </path>
  
  <path id="speedy-knowledge-sort.runtime.module.classpath">
    <pathelement location="${speedy-knowledge-sort.testoutput.dir}"/>
    <pathelement location="${speedy-knowledge-sort.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.speedy-knowledge-sort">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.speedy-knowledge-sort">
    <patternset refid="excluded.from.module.speedy-knowledge-sort"/>
  </patternset>
  
  <path id="speedy-knowledge-sort.module.sourcepath">
    <dirset dir="${module.speedy-knowledge-sort.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.speedy-knowledge-sort" depends="compile.module.speedy-knowledge-sort.production,compile.module.speedy-knowledge-sort.tests" description="Compile module speedy-knowledge-sort"/>
  
  <target name="compile.module.speedy-knowledge-sort.production" description="Compile module speedy-knowledge-sort; production classes">
    <mkdir dir="${speedy-knowledge-sort.output.dir}"/>
    <javac destdir="${speedy-knowledge-sort.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.speedy-knowledge-sort}/javac">
      <compilerarg line="${compiler.args.speedy-knowledge-sort}"/>
      <bootclasspath refid="speedy-knowledge-sort.module.bootclasspath"/>
      <classpath refid="speedy-knowledge-sort.module.production.classpath"/>
      <src refid="speedy-knowledge-sort.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.speedy-knowledge-sort"/>
    </javac>
    
    <copy todir="${speedy-knowledge-sort.output.dir}">
      <fileset dir="${module.speedy-knowledge-sort.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.speedy-knowledge-sort.tests" depends="compile.module.speedy-knowledge-sort.production" description="compile module speedy-knowledge-sort; test classes" unless="skip.tests"/>
  
  <target name="clean.module.speedy-knowledge-sort" description="cleanup module">
    <delete dir="${speedy-knowledge-sort.output.dir}"/>
    <delete dir="${speedy-knowledge-sort.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.speedy-knowledge-sort" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.speedy-knowledge-sort" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>